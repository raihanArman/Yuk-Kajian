<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_img"
                android:layout_width="100dp"
                android:layout_height="140dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/iv_pamflet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/cv_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori : tauhid"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_judul_kajian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kajian tauhid"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamis, 20 Desember 2020"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam 10:30"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi : Masjid Baiturahman Makassar"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/bt_iniciar_sesion"
                    android:layout_marginRight="10dp"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:elevation="8dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true"
                    app:pressedTranslationZ="12dp"
                    app:useCompatPadding="true"
                    app:backgroundTint="@color/colorPrimary">
                    <LinearLayout
                        android:id="@+id/lv_matikan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#E91E2F"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:tint="@android:color/white"
                            android:src="@drawable/ic_power_settings_new_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matikan"
                            android:layout_marginLeft="10dp"
                            android:textSize="8sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>