<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/sv_lampiran"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardElevation="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_link"
                                android:layout_marginTop="24dp"
                                android:includeFontPadding="false"
                                android:layout_marginBottom="10dp"
                                android:text="Link (optional)"
                                android:textSize="15sp"
                                android:textColor="@android:color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/et_link"
                                android:padding="15dp"
                                android:hint="Link"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"
                                android:ems="10"
                                android:maxLines="1"
                                android:background="@drawable/bg_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_title_surat_pemateri"
                                android:layout_marginTop="24dp"
                                android:includeFontPadding="false"
                                android:layout_marginBottom="10dp"
                                android:text="Surat/ScreenShot Chat Kesedian Pemateri"
                                android:textSize="15sp"
                                android:textColor="@android:color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="250dp">
                                <ImageView
                                    android:id="@+id/iv_lampiran1"
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"/>
                                <LinearLayout
                                    android:id="@+id/layout_btn_add_image_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:background="@drawable/bg_input"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/ic_camera_alt_black_24dp"
                                        android:tint="#848484"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tambahkan Gambar"
                                        android:fontFamily="@font/poppins_regular"/>
                                </LinearLayout>
                                <TextView
                                    android:visibility="invisible"
                                    android:id="@+id/tv_ganti_gambar_1"
                                    android:background="@drawable/bg_button_tambah_keranjang"
                                    android:text="Ganti gambar"
                                    android:padding="10dp"
                                    android:textColor="@android:color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@id/layout_btn_add_image_1"
                                    android:layout_margin="16dp"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/tv_title_surat_lokasi"
                                android:layout_marginTop="24dp"
                                android:includeFontPadding="false"
                                android:layout_marginBottom="10dp"
                                android:text="Surat Peminjaman Lokasi"
                                android:textSize="15sp"
                                android:textColor="@android:color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="250dp">
                                <ImageView
                                    android:id="@+id/iv_lampiran2"
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"/>
                                <LinearLayout
                                    android:id="@+id/layout_btn_add_image_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:background="@drawable/bg_input"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/ic_camera_alt_black_24dp"
                                        android:tint="#848484"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tambahkan Gambar"
                                        android:fontFamily="@font/poppins_regular"/>
                                </LinearLayout>
                                <TextView
                                    android:visibility="invisible"
                                    android:id="@+id/tv_ganti_gambar_2"
                                    android:background="@drawable/bg_button_tambah_keranjang"
                                    android:text="Ganti gambar"
                                    android:padding="10dp"
                                    android:textColor="@android:color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@id/layout_btn_add_image_2"
                                    android:layout_margin="16dp"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/tv_title_surat_keramaian"
                                android:layout_marginTop="24dp"
                                android:includeFontPadding="false"
                                android:layout_marginBottom="10dp"
                                android:text="Surat Keramaian"
                                android:textSize="15sp"
                                android:textColor="@android:color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="250dp">
                                <ImageView
                                    android:id="@+id/iv_lampiran3"
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"/>
                                <LinearLayout
                                    android:id="@+id/layout_btn_add_image_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:background="@drawable/bg_input"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/ic_camera_alt_black_24dp"
                                        android:tint="#848484"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tambahkan Gambar"
                                        android:fontFamily="@font/poppins_regular"/>
                                </LinearLayout>
                                <TextView
                                    android:visibility="invisible"
                                    android:id="@+id/tv_ganti_gambar_3"
                                    android:background="@drawable/bg_button_tambah_keranjang"
                                    android:text="Ganti gambar"
                                    android:padding="10dp"
                                    android:textColor="@android:color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@id/layout_btn_add_image_3"
                                    android:layout_margin="16dp"/>
                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/lv_tambah_surat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_btn_red"
                                android:padding="8dp"
                                android:layout_marginTop="30dp"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_add_black_24dp"
                                    android:tint="@android:color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tambah surat kerjasama"
                                    android:textSize="15sp"
                                    android:textColor="@android:color/white"
                                    />
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="10dp"
                                android:id="@+id/rv_lampiran_usulan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <Button
                                android:id="@+id/btn_kirim"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button"
                                android:text="Kirim"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_gravity="right"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>