<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/sv_usulkan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.usulan.UsulkanFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="24dp"
                            android:includeFontPadding="false"
                            android:layout_marginBottom="10dp"
                            android:text="Ket (*) Wajib diisi"
                            android:textStyle="italic|bold"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_pamflet"
                            android:layout_marginTop="24dp"
                            android:includeFontPadding="false"
                            android:layout_marginBottom="10dp"
                            android:text="Pamflet (*)"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp">
                            <ImageView
                                android:id="@+id/iv_kajian"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>
                            <LinearLayout
                                android:id="@+id/layout_btn_add_image"
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:background="@drawable/bg_input"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_camera_alt_black_24dp"
                                    android:tint="#848484"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tambahkan Gambar"
                                    android:fontFamily="@font/poppins_regular"/>
                            </LinearLayout>
                            <TextView
                                android:visibility="invisible"
                                android:id="@+id/tv_ganti_gambar"
                                android:background="@drawable/bg_button_tambah_keranjang"
                                android:text="Ganti gambar"
                                android:padding="10dp"
                                android:textColor="@android:color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/layout_btn_add_image"
                                android:layout_margin="16dp"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_marginTop="24dp"
                            android:includeFontPadding="false"
                            android:layout_marginBottom="10dp"
                            android:text="Jenis Kajian"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/sp_jenis_kajian"
                            android:padding="8dp"
                            android:hint="Pilih jenis kajian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></Spinner>
                        <TextView
                            android:layout_marginTop="24dp"
                            android:includeFontPadding="false"
                            android:layout_marginBottom="10dp"
                            android:text="Kategori"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/sp_kategori"
                            android:padding="8dp"
                            android:hint="Pilih jenis kajian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></Spinner>
                        <TextView
                            android:layout_marginTop="24dp"
                            android:includeFontPadding="false"
                            android:layout_marginBottom="10dp"
                            android:text="Judul Kajian (*)"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/et_judul_kajian"
                            android:padding="15dp"
                            android:hint="Judul Kajian"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:ems="10"
                            android:maxLines="1"
                            android:background="@drawable/bg_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="24dp"
                            android:includeFontPadding="false"
                            android:layout_marginBottom="10dp"
                            android:text="Pemateri (*)"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/et_pemateri"
                            android:padding="15dp"
                            android:hint="Pemateri"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:ems="10"
                            android:maxLines="1"
                            android:background="@drawable/bg_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_pilih_tanggal"
                            android:layout_marginTop="24dp"
                            android:includeFontPadding="false"
                            android:layout_marginBottom="10dp"
                            android:text="Tanggal dan jam (*)"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginRight="10dp"
                                android:elevation="8dp"
                                app:cardCornerRadius="10dp"
                                android:clickable="true"
                                app:pressedTranslationZ="12dp"
                                app:useCompatPadding="true"
                                app:backgroundTint="@color/colorPrimary">
                                <LinearLayout
                                    android:id="@+id/lv_jam"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:background="#DEDEDF">
                                    <ImageView
                                        android:id="@+id/iv_jam"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_timer_black_24dp"/>
                                    <TextView
                                        android:id="@+id/tv_jam"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Jam"
                                        android:layout_marginLeft="15dp"
                                        android:textSize="10sp"
                                        android:textColor="@android:color/black"
                                        android:fontFamily="@font/poppins_regular"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:elevation="8dp"
                                app:cardCornerRadius="10dp"
                                android:clickable="true"
                                app:pressedTranslationZ="12dp"
                                app:useCompatPadding="true"
                                app:backgroundTint="@color/colorPrimary">
                                <LinearLayout
                                    android:id="@+id/lv_tanggal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp"
                                    android:background="#DEDEDF">
                                    <ImageView
                                        android:id="@+id/iv_tanggal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_event_available_black_24dp"/>
                                    <TextView
                                        android:id="@+id/tv_tanggal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tanggal"
                                        android:layout_marginLeft="10dp"
                                        android:textSize="10sp"
                                        android:textColor="@android:color/black"
                                        android:fontFamily="@font/poppins_regular"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="24dp"
                            android:includeFontPadding="false"
                            android:layout_marginBottom="10dp"
                            android:text="Lokasi"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/et_lokasi"
                            android:padding="15dp"
                            android:hint="Lokasi"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:ems="10"
                            android:background="@drawable/bg_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="24dp"
                            android:includeFontPadding="false"
                            android:layout_marginBottom="10dp"
                            android:text="No Telepon Pemateri (*)"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/et_no_telp_pemateri"
                            android:padding="15dp"
                            android:hint="Tulis no telp anda"
                            android:textSize="12sp"
                            android:maxLength="13"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:ems="10"
                            android:maxLines="1"
                            android:background="@drawable/bg_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btn_kirim"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_button"
                            android:text="Next"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="right"/>
                    </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</ScrollView>