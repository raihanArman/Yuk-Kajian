<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img"
            android:layout_width="100dp"
            android:layout_height="140dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/iv_pamflet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/cv_img"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori : tauhid"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/poppins_regular"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/tv_judul_kajian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kajian tauhid"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamis, 20 Desember 2020"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/tv_jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam 10:30"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/tv_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi : Masjid Baiturahman Makassar"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="10sp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>